{# Czas trwania umowy#}
<form class="multistep-form" id="expand-info3" action="/multistep/postanowienia-umowy.html">
    <h2>{{ title }}</h2>
    <fieldset class="multistep-form__section">
        <div class="multistep-form__tooltip">
            <h5 class="multistep-form__tooltip-parent">Czy umowa jest zawierana na określony czas:
                <span class="trigger fa fa-question"></span>
                <div class="tooltip">
                    <h5>
                        <strong>Title</strong>
                    </h5>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eum, sit?</p>
                    <a class="tooltip-link" target="_blank" href="https://www.google.com"> google.com</a>
                </div>
            </h5>
        </div>
        <div class="form-check form-check--show radio">
            <input class="form-check-input" type="radio" name="radioOptions12" id="radio15a" value="option1">
            <label class="form-check-label" for="radio15a">tak</label>
        </div>
        <div class="form-check radio">
            <input class="form-check-input" type="radio" name="radioOptions12" id="radio15b" value="option2">
            <label class="form-check-label" for="radio15b">nie</label>
        </div>
    </fieldset>
    <fieldset class="multistep-form__section multistep-form__section--show">
        <div class="expand-info">
            <div class="expand-info__content">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <input type="number" class="form-control" id="inputPeriod1" name="inputPeriod" placeholder="12">
                    </div>
                </div>
                <div class="multistep-form__section">
                    <div class="form-check radio">
                        <input class="form-check-input" type="radio" name="currencyType2" id="year" value="option1">
                        <label class="form-check-label" for="year">lat</label>
                    </div>
                    <div class="form-check radio">
                        <input class="form-check-input" type="radio" name="currencyType2" id="month" value="option2">
                        <label class="form-check-label" for="month">miesięcy</label>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="multistep-form__actions">
        <div class="multistep-form__action">
            <div class="multistep-form__action__prev">
                <a href="" class="btn btn--secondary">
                    <i class="fas fa-arrow-left"></i>
                    wróć
                </a>
            </div>
            <div class="multistep-form__action__next">
                <button type="submit" class="btn btn--secondary">dalej
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </div>
        <div class="multistep-form__action multistep-form__action--save">
            <button type="submit" class="btn btn--primary btn-save">
                <i class="icon-save far fa-save"></i>
                <span class="change-text">zapisz i dokończ później</span>
            </button>
        </div>
    </div>
</form>