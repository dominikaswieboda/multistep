                <label for="inputCityKey46c">Kod pocztowy</label>
                <input type="text" class="form-control" id="inputCityKey46c" name="inputCityKey46c">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail46c">Email</label>
                <input type="email" class="form-control" id="inputEmail46c" name="inputEmail46c" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPhone46c">Telefon</label>
                <input type="number" class="form-control" id="inputPhone46c" name="inputPhone46c" placeholder="Telefon">
            </div>
        </div>
    </fieldset>
    <fieldset class="multistep-form__section">
        <legend>Zarząd / przedstawieciel ujawniającego:</legend>
        <div class="add-person">
            <div class="add-person__content">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputName46c">Imię osoby reprezentującej firmę</label>
                        <input type="text" class="form-control" id="inputName46c" name="inputName46c" placeholder="Imię">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputUsername46c">Nazwisko osoby reprezentującej firmę</label>
                        <input type="text" class="form-control" id="inputUsername46c" name="inputUsername46c" placeholder="Nazwisko">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputStatus46c">Status osoby reprezentującej firmę</label>
                        <input type="text" class="form-control" id="inputStatus46c"  name="inputStatus46c" placeholder="Status">
                    </div>
                </div>
            </div>
            <div class="add-person__action">
                <button class="btn btn--primary btn-add">dodaj nową osobę
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <div class="add-person__content add-person__content--expand">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputName2">Imię osoby reprezentującej firmę</label>
