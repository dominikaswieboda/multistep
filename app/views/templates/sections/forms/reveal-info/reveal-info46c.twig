            </div>
            <div class="form-group col-md-4">
                <label for="inputNip46c">Nip</label>
                <input type="text" class="form-control" id="inputNip46c" name="inputNip46c">
            </div>
        </div>
    </fieldset>
    <fieldset class="multistep-form__section">
        <legend>Dane kontaktowe:</legend>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputStreet46c">Ulica</label>
                <input type="text" class="form-control" id="inputStreet46c" name="inputStreet46c">
            </div>
            <div class="form-group col-md-4">
                <label for="inputNumberStreet46c">Numer ulicy</label>
                <input type="text" class="form-control" id="inputNumberStreet46c" name="inputNumberStreet46c">
            </div>
            <div class="form-group col-md-4">
                <label for="inputNumberLocal46c">Numer lokalu</label>
                <input type="text" class="form-control" id="inputNumberLocal46c" name="inputNumberLocal46c">
            </div>
            <div class="form-group col-md-4">
                <label for="inputCity46c">Miejscowość</label>
